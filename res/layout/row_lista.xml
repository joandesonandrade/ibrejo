<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/layout_border"
    android:id="@+id/lista_container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    <ImageView
        android:id="@+id/lista_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/radius_image"
        android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/macaxeira"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="60dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/lista_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nome da empresa"
            android:textSize="15dp"
            android:textColor="#333"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/list_name_id"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/lista_descricao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="..."
                android:textSize="12dp"
                android:textColor="#FF737172"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>